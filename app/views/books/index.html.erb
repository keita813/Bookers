<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="application.css">
	<title>WebCampBackendNew</title>
</head>
<body>
	<p id="notice"><%= notice %></p>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= book.title %>
				</td>
				<td>
					<%= book.body %>
				</td>
				<td>
					<%= link_to "Show", book_path(book.id) %>
					<%= link_to "Edit", edit_book_path(book.id) %>
					<%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %>
 				</td>
				
			</tr>
			<% end %>
		</tbody>
	</table>
	
	<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-denger">
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
	<h1>New book</h1>
	<%= form_for(@book) do |f| %>

	<h5>Title</h5>
	<%= f.text_field :title %>

	<h5>Body</h5>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Create Book'%>

	<% end %>


</body>
</html>
